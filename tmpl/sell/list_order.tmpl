    <thead>
        <tr class="uppercase">
            <th>  </th>
            <th> 序号 </th>
            <th> 平台 </th>
            <th> 店铺 </th>
            <th> 订单ID </th>
            <th> 订单发布时间 </th>
            <th> 接单时间 </th>
