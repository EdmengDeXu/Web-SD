<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> 序号 </th>
            <th> 完成时间 </th>
            <th> 订单编号 </th>
            <th> 接单用户 </th>
            <th> 淘宝订单号  </th>
            <th> 成交价格 </th>
            <th> 任务状态 </th>
            <th> 操作 </th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1 + ~root.pageSize*~root.pageIndex}} </td>
            <td> {{:~formatTime(createtime)}}</td>
            <td> {{:code}}</td>
            <td> {{:taobaoAcount}} </td>
            <td> {{:orderid}} </td>
            <td> {{:goodsPrice}} </td>
            <td class="z-status{{:status}}">  
                {{:~formatOrderStatus(status)}}
                <div class="progress progress-striped active">
                  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{:percent}}%;">
                  </div>
                </div>
            </td>
            <td>
              {{if (status==10)}}
              <a href="javascript:;" class="btn green-dark btn-xs  sbold uppercase sub-goods" id="{{:id}}"  tid="{{:taskkeyId}}" pid="{{:taskId}}"><i class="fa fa-hand-o-right"></i> 发货 </a> 
              {{/if}}
              {{if (status==30)}}
              <a href="javascript:;" class="btn red btn-xs  sbold uppercase pay-task" id="{{:id}}"  tid="{{:taskkeyId}}" pid="{{:taskId}}"><i class="fa fa-hand-o-right"></i> 审核 </a> 
              {{/if}}
            </td>
        </tr>
      {{/for}}
    </tbody>
  </table>