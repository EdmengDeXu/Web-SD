<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> 序号 </th>
            <th> 任务状态 </th>
            <th> 实例编号 </th>
            <th> 接单用户 </th>
            <th> 完成时间 </th>
            <th> 淘宝订单号  </th>
            <th> 成交价格 </th>
            
            <th> 操作 </th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1 + ~root.pageSize*~root.pageIndex}} </td>
            <td class="z-status{{:status}}">
           {{if   (status== 0)}} 待处理
           {{else (status==10)}} 待发货
           {{else (status==20)}} 待评价
           {{else (status==30)}} 评价待审核
           {{else (status==40)}} 待确认返款
           {{else (status==50)}} 评价待审核
           {{else (status==60)}} 刷手撤销
           {{else (status==70)}} 系统撤销
           {{else (status==80)}} 已完成
           {{/if}} 
            </td>
            <td> {{:taskkeyId}}</td>
            <th> xxx </th>
            <td> {{:~formatTime(createtime)}}</td>
            <td> taobao id </td>
            <td> price </td>
            
            <td class="fn-center">
              {{if (status==10)}}
              <a href="javascript:;" class="btn blue-madison btn-sm btn-outline sbold uppercase mag-task" id="{{:id}} " ><i class="fa fa-hand-o-right"></i> 发货 </a> 
              {{/if}}
              <a href="javascript:;" class="btn blue-madison btn-sm btn-outline sbold uppercase mag-task" id="{{:id}} " ><i class="fa fa-hand-o-right"></i> 发货 </a> 
            </td>
        </tr>
      {{/for}}
    </tbody>
  </table>