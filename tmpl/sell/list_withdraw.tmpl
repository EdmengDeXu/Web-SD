<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> 序号 </th>
            <th> 创建时间 </th>
            <th> 用户名称 </th>
            <th> 收款账号 </th>
            <th> 本金 </th>
            <th> 手续费 </th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1 + ~root.pageSize*~root.pageIndex}} </td>
            <td> {{:~formatTime(createtime)}}</td>
            <td> {{:~root.name}}</td>
            <td> {{:toAccount}}</td>
            <td> {{:actualValue}}</td>
            <td> {{:serviceFee}}</td>
        </tr>
      {{/for}}
    </tbody>
</table>
