<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> # </th>
            <th> 店铺名称 </th>
            <th> 平台 </th>
            <th> 店铺类型 </th>
            <th> 所属地区 </th>
            <th> 链接 </th>
            <th> 审核状态 </th>
            <th class="fn-center"> 功能 </th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1}} </td>
            <td> <a href="{{:shopurl}}" target="_blank">{{:name}}</a></td>
            <td> {{:type}} </td>
            <td> {{:businesstype}} - {{:subtype}}</td>
            <td> {{:addressProvince}}{{:addressCity}}{{:addressCounty}} </td>
            <td> {{:address}} </td>
            <td class="pass{{:approveState}}"> {{:approveStr}} </td>
            <td class="fn-center">
              {{if approveState==0 || approveState==2}}
              <a href="#basic" class="btn blue-madison btn-sm btn-outline sbold uppercase  edit-shop"  data-toggle="modal" data-index="{{:#index}}" data-id="{{:id}}"><i class="fa fa-edit"></i> 修改 </a> 
              {{/if}}
              {{if approveState==0 || approveState==1 }}
              <a href="javascript:;" class="btn red btn-sm btn-outline sbold uppercase del-shop" id="{{:id}} " ><i class="fa fa-times"></i> 停用 </a> 
              {{/if}}
            </td>
        </tr>
      {{/for}}
    </tbody>
  </table>