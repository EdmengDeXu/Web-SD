<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> 序号 </th>
            <th> 审核状态 </th>
            <th> 用户名 </th>
            <th> 店铺类型 </th>
            <th> 店铺图片 </th>
            <th> 白条图片 </th>
            <th> 功能 </th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1 + ~root.pageSize*~root.pageIndex}} </td>
            <td class="pass{{:approve}}"> {{:approveString}} </td>
            <td> {{:acount}}</td>
            <td> {{:type}} </td> 
            <td> {{if mysiteImg}}<a href="{{:~root.imgPrefix}}{{:mysiteImg}}" class="fancybox"><img src="{{:~root.imgPrefix}}{{:mysiteImg}}" style="width: 150px; height: 100px;"></a>{{/if}}</td>
            <td> {{if baitiaoImg}}<a href="{{:~root.imgPrefix}}{{:baitiaoImg}}" class="fancybox"><img src="{{:~root.imgPrefix}}{{:baitiaoImg}}" style="width: 150px; height: 100px;"></a>{{/if}}</td>
            
            <td class="fn-center"> 
              {{if approve!=2}}
              <a href="#basic" class="btn red btn-sm btn-outline audit-task"   data-id="{{:id}}" data-type="unpass"><i class="fa fa-edit"></i> 不通过 </a> {{/if}}
              {{if approve!=2}}
              <a href="#basic" class="btn blue-madison btn-sm btn-outline audit-task"   data-id="{{:id}}" data-type="pass"><i class="fa fa-edit"></i> 通过 </a> {{/if}}
            </td>
        </tr>
      {{/for}}
    </tbody>
  </table>