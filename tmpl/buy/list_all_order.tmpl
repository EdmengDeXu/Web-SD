<table class="table table-hover table-light">
  <thead>
    <tr class="uppercase">
      <th> 序号 </th>
      <th> 任务状态 </th>
      <th> 任务编号 </th>
      <th> 发布时间 </th>
      <th> 平台 </th>
      <th> 类型 </th>
      <th>  </th>
      <th> 完成限时 </th>
      <th> 佣金 </th>
      <th> 功能 </th>
    </tr>
  </thead>
  <tbody>
    {{for data.content}}
    <tr>
      <td> {{:#index+1}} </td>
      <td class="z-status{{:status}}"> 
           {{if   (status== 0)}} 待处理
           {{else (status==10)}} 待发货
           {{else (status==20)}} 待评价
           {{else (status==30)}} 评价待审核
           {{else (status==40)}} 待确认返款
           {{else (status==50)}} 评价待审核
           {{else (status==60)}} 刷手撤销
           {{else (status==70)}} 系统撤销
           {{else (status==80)}} 已完成
           {{/if}} </td>
      <td> {{:taskId}} </td>
      <td>{{:~formatTime(publishTime)}}</td>
      <td> {{:platform}}</td>
      <td> {{:taskType}}</td>
      <td>   </td>
      <td> {{:finidshTime}} </td>
      <td> {{:reward}}元</td>
      <td class="fn-center">
        {{if (status == 0)}}
        <a href="#basic" class="btn blue-madison btn-sm btn-outline cancel-task "  data-id="{{:id}}" ><i class="fa fa-edit"></i> 退单 </a>
        {{/if}}
        {{if (status == 0)}}
        <a href="#basic" class="btn red btn-sm btn-outline commit-task"  data-id="{{:id}}" ><i class="fa fa-edit"></i> 提交购买信息 </a>
        {{/if}}

      </td>
    </tr>
    {{/for}}
  </tbody>
</table>