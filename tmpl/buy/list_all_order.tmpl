<table class="table table-hover table-light">
  <thead>
    <tr class="uppercase">
      <th> 序号 </th>
      <th> 任务编号 </th>
      <th> 发布时间 </th>
      <th> 平台 </th>
      <th> 类型 </th>
      <th>  </th>
      <th> 完成限时 </th>
      <th> 佣金 </th>
      <th> 功能 </th>
    </tr>
  </thead>
  <tbody>
    {{for data.content}}
    <tr>
      <td> {{:#index+1}} </td>
      <th> {{:taskId}} </th>
      <td>{{:~formatTime(publishTime)}}</td>
      <td> {{:platform}}</td>
      <td> {{:taskType}}</td>
      <td>   </td>
      <td> {{:finidshTime}} </td>
      <td> {{:reward}}元</td>
      <td class="fn-center">
        <a href="#basic" class="btn blue-madison btn-sm btn-outline cancel-task "  data-id="{{:id}}" ><i class="fa fa-edit"></i> 退单 </a>
        <a href="#basic" class="btn red btn-sm btn-outline commit-task"  data-id="{{:id}}" ><i class="fa fa-edit"></i> 提交购买信息 </a>
      </td>
    </tr>
    {{/for}}
  </tbody>
</table>