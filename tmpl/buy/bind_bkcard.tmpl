<form action="#" id="form-bind" class="form-horizontal form-bordered">
  <div class="form-group">
    <label class="control-label col-xs-2">开户姓名</label>
    <div class="col-xs-6">
      <input type="text" class="form-control" id="acount-name" placeholder="请输入开户姓名" value="{{:name}}" {{:type}}>
    </div>
    <div class="col-xs-4 form-info">(银行卡姓名必须与身份证姓名一致)</div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-2">银行名称</label>
    <div class="col-xs-6">
      <select class="form-control " id="bank" {{:type}}>
        <option value="">请选择银行</option>
        {{for banks}}
        <option value="{{:#data}}" {{if (~root.status != 0) && #data == ~root.bank}}selected{{/if}} >{{:#data}}</option>
        {{/for}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-2">开户支行</label>
    <div class="col-xs-6">
      <input type="text" class="form-control" id="acount-subbank" placeholder="请输入正确的开户支行" value="{{:acountSubbank}}" {{:type}}>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-2">开户行号</label>
    <div class="col-xs-6">
      <input type="text" class="form-control" id="acount-bankno" placeholder="请输入正确的开户行号" value="{{:acountBankno}}" {{:type}}>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-2">银行账号</label>
    <div class="col-xs-6">
      <input type="text" class="form-control" id="bankno" placeholder="请输入正确的银行账号" value="{{:bankNo}}" {{:type}}>
    </div>
  </div>

  {{if status == 0 || status == 3}}
  <div class="form-group">
    <label class="control-label col-xs-2">确认账号</label>
    <div class="col-xs-6">
      <input type="text" class="form-control" id="rebankno" placeholder="请再次输入银行账号确认">
    </div>
  </div>
  {{/if}}

  {{if status !== 0}}
  <div class="form-group">
    <label class="control-label col-xs-2">审核状态</label>
    <div class="col-xs-6">
      <input type="text" class="form-control" value="{{:statusText}}" disabled>
    </div>
  </div>
  {{/if}}

  <div class="form-group">
    <label class="control-label col-xs-2"></label>
    <div class="col-xs-10">
      {{if status == 0 || status == 3}}
      <button type="button" class="btn blue" id="saveBtn">保存</button>
      {{/if}}
      <button type="button" class="btn red" id="returnBtn"> 返回</button>
    </div>
  </div>
</form>