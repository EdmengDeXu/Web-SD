<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> 序号 </th>
            <th> 发布时间 </th>
            <th> 平台 </th>
            <th> 任务类型 </th>
            <th> 完成限时 </th>
            <th> 任务名称 </th>
            <th> 佣金 </th>
            <th> 功能 </th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1}} </td>
            <td>{{:~formatTime(createtime)}}</td>
            <td> {{:tasktype}}</td>
            <td> {{:tasktype}} </td>
            <td> {{:finishtime}} </td>
            <td> {{:name}}</td>
            <td> {{:money}}</td>
            <td class="fn-center"> 
              
              <a href="#basic" class="btn red btn-sm btn-outline audit-task"   data-id="{{:id}}" data-type="unpass"><i class="fa fa-edit"></i> 详情 </a> 
              {{if approveState!=2}}
              <a href="#basic" class="btn blue-madison btn-sm btn-outline audit-task"   data-id="{{:id}}" data-type="pass"><i class="fa fa-edit"></i> 接单 </a> {{/if}}
              
            </td>
        </tr>
      {{/for}}
    </tbody>
  </table>