<table class="table table-hover table-light">
    <thead>
        <tr class="uppercase">
            <th> # </th>
            <th> 充值时间 </th>
            <th> 充值金额 </th>
            <th> 转账银行 </th>
            <th> 姓名 </th>
            <th> 账户 </th>
        </tr>
    </thead>
    <tbody>
      {{for data}}
        <tr>
            <td> {{:#index+1}} </td>
            <td> {{:name}}</td>
            <td> {{:type}} </td>
            <td> {{:businesstype}} - {{:subtype}}</td>
            <td> {{:addressProvince}}{{:addressCity}}{{:addressCounty}} </td>
            <td> {{:address}} </td>
        </tr>
      {{/for}}
    </tbody>
  </table>